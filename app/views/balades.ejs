<%- include('partials/header.ejs') %>
<div class="container-balad" aria-label="container">
<% for (const post of posts) { %>
    <a class=" container-balad__article" href="/<%= post.slug %>"><article aria-label="link to a balad">
        <p>Posté le : <%= post.created_at.toDateString() %> modifié le : <%= post.updated_at ? post.updated_at.toDateString() : "jamais"%></p>
        <h3><%= post.title %></h3>
        <h5><%= post.name %></h5>
        <p><%= post.content.substring(0, 100) %>...</p>
        <div class="container-balad__imgcontainer">
        <img alt="<%= post.img_name %>" src="<%= post.img_path %>.jpg"/>
        </div>
    </article></a>
<% }; %>
</div>
<%- include('partials/footer.ejs') %>